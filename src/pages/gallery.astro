  { thumbnail: ercoleDervic1, fullRes: '/images/instruments/ercole-dervic-1.jpg', alt: 'Ercole e Dervic', maker: 'Ercole e Dervic' },
  { thumbnail: ercoleDervic2, fullRes: '/images/instruments/ercole-dervic-2.jpg', alt: 'Ercole e Dervic', maker: 'Ercole e Dervic' },
