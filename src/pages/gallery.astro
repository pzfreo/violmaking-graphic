  { thumbnail: andreasLinos4, fullRes: '/images/instruments/andreas-linos-4.jpeg', alt: 'Andreas Linos', maker: 'Andreas Linos' },
  { thumbnail: andreasLinos5, fullRes: '/images/instruments/andreas-linos-5.jpeg', alt: 'Andreas Linos', maker: 'Andreas Linos' },
  { thumbnail: andreasLinos6, fullRes: '/images/instruments/andreas-linos-6.jpeg', alt: 'Andreas Linos', maker: 'Andreas Linos' },
  { thumbnail: carlosPineda1, fullRes: '/images/instruments/carlos-pineda-1.jpeg', alt: 'Carlos Pineda', maker: 'Carlos Pineda' },
