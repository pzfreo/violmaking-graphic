---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <section class="py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-6xl font-bold text-text mb-4">404</h1>
      <p class="text-xl text-text-light mb-8">Page not found</p>
      <a
        href="/"
        class="inline-block bg-primary hover:bg-primary-light text-white font-semibold px-8 py-3 rounded-lg transition-colors"
      >
        Back to Home
      </a>
    </div>
  </section>
</BaseLayout>
