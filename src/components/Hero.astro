---
interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string;
  showCta?: boolean;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title,
  subtitle,
  image,
  imageAlt = 'Hero image',
  showCta = false,
  ctaText = 'Get Tickets',
  ctaHref = '#'
} = Astro.props;
---

{image ? (
  <section class="relative">
    <div class="absolute inset-0 overflow-hidden">
      <img
        src={image}
        alt={imageAlt}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/40"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">
        {title}
      </h1>
      {subtitle && (
        <p class="text-lg md:text-xl text-white/90">
          {subtitle}
        </p>
      )}
      {showCta && (
        <a
          href={ctaHref}
          class="inline-block mt-6 bg-primary hover:bg-primary-light text-white font-semibold px-8 py-3 rounded-lg transition-colors"
        >
          {ctaText}
        </a>
      )}
    </div>
  </section>
) : (
  <section class="bg-primary">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">
        {title}
      </h1>
      {subtitle && (
        <p class="text-lg md:text-xl text-white/90">
          {subtitle}
        </p>
      )}
      {showCta && (
        <a
          href={ctaHref}
          class="inline-block mt-6 bg-white hover:bg-gray-100 text-primary font-semibold px-8 py-3 rounded-lg transition-colors"
        >
          {ctaText}
        </a>
      )}
    </div>
  </section>
)}
