---
interface Props {
  videoId: string;
  title: string;
}

const { videoId, title } = Astro.props;
---

<div class="aspect-video rounded-lg overflow-hidden bg-bg-alt">
  <iframe
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    loading="lazy"
    class="w-full h-full"
  ></iframe>
</div>
