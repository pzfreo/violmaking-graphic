---
interface AgendaItem {
  time: string;
  title: string;
  speaker?: string;
  speakerSlug?: string;
  description?: string;
  isBreak?: boolean;
  website?: string;
  website2?: string;
  instagram?: string;
}

interface Props {
  items: AgendaItem[];
}

const { items } = Astro.props;
---

<div class="overflow-x-auto">
  <table class="w-full">
    <tbody class="divide-y divide-border">
      {items.map((item) => (
        <tr class:list={[
          item.isBreak ? 'bg-bg-alt' : 'bg-white'
        ]}>
          <td class="py-4 pr-4 text-sm font-medium text-text-light whitespace-nowrap align-top w-32">
            {item.time}
          </td>
          <td class="py-4 align-top">
            {item.speaker ? (
              <div>
                <p class="font-semibold text-text">
                  {item.speakerSlug ? (
                    <a href={`/speakers#${item.speakerSlug}`} class="hover:text-primary transition-colors">
                      {item.speaker}
                    </a>
                  ) : (
                    item.speaker
                  )}
                  {(item.website || item.website2 || item.instagram) && (
                    <span class="inline-flex items-center gap-2 ml-2">
                      {item.website && (
                        <a
                          href={item.website}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-block text-primary hover:text-primary-light transition-colors"
                          title="Website"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                          </svg>
                        </a>
                      )}
                      {item.website2 && (
                        <a
                          href={item.website2}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-block text-primary hover:text-primary-light transition-colors"
                          title="Website"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                          </svg>
                        </a>
                      )}
                      {item.instagram && (
                        <a
                          href={item.instagram}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-block text-primary hover:text-primary-light transition-colors"
                          title="Instagram"
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                          </svg>
                        </a>
                      )}
                    </span>
                  )}
                </p>
                <p class="text-text-light mt-1">{item.title}</p>
                {item.description && (
                  <p class="text-sm text-text-light mt-1 italic">{item.description}</p>
                )}
              </div>
            ) : (
              <p class:list={[
                item.isBreak ? 'text-text-light' : 'font-semibold text-text'
              ]}>
                {item.title}
              </p>
            )}
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
