---
interface Props {
  feedId?: string;
}

const { feedId } = Astro.props;
---

<section class="py-16 bg-bg-alt">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-semibold text-text mb-2">Follow Us on Instagram</h2>
      <a
        href="https://www.instagram.com/viol.making/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-primary-dark hover:text-text transition-colors"
      >
        @viol.making
      </a>
    </div>

    {feedId ? (
      <!-- Behold Instagram Widget -->
      <div data-behold-id={feedId}></div>
      <script src="https://w.behold.so/widget.js" type="module" async></script>
    ) : (
      <!-- Placeholder when no feed ID configured -->
      <div class="text-center py-12 bg-white rounded-lg border border-border">
        <p class="text-text-light mb-4">Instagram feed coming soon</p>
        <a
          href="https://www.instagram.com/viol.making/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-text font-medium px-6 py-2 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
